@model IEnumerable<LocalTheatre.Models.Announcements>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@{
    ViewBag.Title = "Announcements";
}

<h2>Articles</h2> @if (User.IsInRole("Administrator") || User.IsInRole("Staff"))
{
    @Html.ActionLink("Add Post", "Create", null, new { @class = "btn btn-danger" })
}


<hr />

<div class="row">
    <div class="leftcolumn">
        @foreach (var item in Model)
        {
            <div class="card">
                <h2>@Html.DisplayFor(modelItem => item.Title)</h2>
                <h5><span class="badge badge-pill">@item.Category</span> - @item.Date.ToShortDateString()</h5>

                <p>@item.Announcement</p>
                <p>Comments <span class="badge badge-danger">@item.Comments.Count</span> </p>
                <p>
                    @Html.ActionLink("View Post", "ViewAnnouncement", new { id = item.AnnouncementId }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Leave Comment", "Create", "Comments", new { id = item.AnnouncementId }, new { @class = "btn btn-danger" })

                    @if (User.IsInRole("Administrator") || User.IsInRole("Staff"))
                    {
                        @Html.ActionLink("Edit Post", "Edit", new { id = item.AnnouncementId }, new { @class = "btn btn-danger" })
                    }

                    @if (User.IsInRole("Administrator") || User.IsInRole("Staff"))
                    {
                        @Html.ActionLink("Delete Post", "Delete", new { id = item.AnnouncementId }, new { @class = "btn btn-danger" })
                    }
                </p>
            </div>
        }

    </div>
    <div class="rightcolumn">
        <div class="card-right">
            <h3>Popular Posts</h3>
            <div class="fakeimg">Image</div><br>
            <div class="fakeimg">Image</div><br>
            <div class="fakeimg">Image</div>
        </div>
        <div class="card-right">
            <h3>Follow Us</h3>
            <p><a href="#" class="fa fa-facebook"></a> <a href="#" class="fa fa-twitter"></a> <a href="#" class="fa fa-instagram"></a> <a href="#" class="fa fa-snapchat"></a></p>


        </div>
    </div>
</div>

<div class="footer">
    <h4>&copy; @DateTime.Now.Year - Developed by James Grant</h4>
</div>








